# API Gateway - Production Environment

# Server settings
NODE_ENV=production
PORT=8000

# Service URLs (for production environment)
# In production, these would typically be service discovery endpoints or load balancers
AUTH_SERVICE_URL=http://auth-service:8001
ORDER_SERVICE_URL=http://order-service:8002
CRM_SERVICE_URL=http://crm-service:8003
INVENTORY_SERVICE_URL=http://inventory-service:8004
FINANCE_SERVICE_URL=http://finance-service:8005
ANALYTICS_SERVICE_URL=http://analytics-service:8006

# JWT settings
JWT_SECRET=replace_with_strong_production_secret
JWT_EXPIRATION=12h

# Logging
LOG_LEVEL=warn

# CORS settings
CORS_ORIGIN=https://erp.example.com

# Security settings
TLS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
